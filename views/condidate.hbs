<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title> {{title}} </title>
        <link rel='stylesheet' href='styles/style.css' />
        <link
            rel='stylesheet'
            href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css'
        />
    </head>
    <body class='min-h-screen bg-gray-100'>
        <nav class='bg-white border-b border-gray-100'>
            <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
                <div class='flex justify-between h-16'>
                    <div class='flex'>
                        <!-- Logo -->
                        <div class='flex-shrink-0 flex items-center'>
                            <a href='/dash'>
                                <a href='/'>
                                    <img
                                        class='block h-10 w-auto fill-current text-gray-600'
                                        src='/img/vote.png'
                                    />
                                </a>
                            </a>
                        </div>
                        <div class='hidden space-x-8 sm:-my-px sm:ml-10 sm:flex'>
                            <a
                                href='dash'
                                class='inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium leading-5 text-gray-500 hover:text-gray-700 hover:border-gray-300 focus:outline-none focus:text-gray-700 focus:border-gray-300 transition duration-150 ease-in-out'
                            >
                                Dashbord
                            </a>
                            <a
                                href='votes'
                                class='inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium leading-5 text-gray-500 hover:text-gray-700 hover:border-gray-300 focus:outline-none focus:text-gray-700 focus:border-gray-300 transition duration-150 ease-in-out'
                            >
                                List Des Vote
                            </a>
                            <a
                                href='condidates'
                                class='inline-flex items-center px-1 pt-1 border-b-2 border-indigo-400 text-sm font-medium leading-5 text-gray-500 hover:text-gray-700 hover:border-gray-300 focus:outline-none focus:text-gray-700 focus:border-gray-300 transition duration-150 ease-in-out'
                            >
                                List Des Condidat
                            </a>
                        </div>
                    </div>
                    <!-- This example requires Tailwind CSS v2.0+ -->
                    <div class='flex inline-flex items-center'>
                        <a href='/logout'>
                            <button
                                type='button'
                                class='inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500'
                                id='menu-button'
                                aria-expanded='true'
                                aria-haspopup='true'
                            >
                                <i class='fa fa-sign-out'></i>
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        {{! end }}

        <div
            class='relative overflow-x-auto shadow-md sm:rounded-lg mt-6 items-center justify-center mx-11'
        >
            <div class='mt-5'>
                <a
                    href='condidates/new'
                    class='bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-3'
                >
                    New
                </a>
            </div>
            <table class='w-full text-sm mt-5 text-left text-gray-500 dark:text-gray-400 py-3'>
                <thead
                    class='text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400'
                >
                    <tr>
                        <th scope='col' class='px-6 py-3'>
                            ID
                        </th>
                        <th scope='col' class='px-6 py-3'>
                            First Name
                        </th>
                        <th scope='col' class='px-6 py-3'>
                            Last Name
                        </th>
                        <th scope='col' class='px-6 py-3'>
                            Date Naissance
                        </th>
                        <th scope='col' class='px-6 py-3'>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each condidates}}
                        <tr class='bg-white border-b dark:bg-gray-800 dark:border-gray-700'>
                            <th class='py-4 px-6'> {{this._id}} </th>
                            <th class='py-4 px-6'> {{this.f_name}} </th>
                            <th class='py-4 px-6'>{{this.l_name}}</th>
                            <th class='py-4 px-6'>{{formateDate this.birthday}}</th>
                            <th class='py-4 px-6'>
                                <a
                                    class='text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm p-2.5 text-center inline-flex items-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'
                                >
                                    delete
                                </a>
                            </th>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </body>
</html>